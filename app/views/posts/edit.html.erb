<div class="d-flex align-items-center">
  <h1>編集</h1>
  <div class="ml-auto posts_button">
      <%= link_to '台帳一覧', posts_path, class: 'btn btn-outline-info' %>
  </div>
</div>
<%= form_for @post do |f| %>
    <div class="form-group">
        <%= f.label :name, 'お客様名' %>
        <%= f.text_field :name, class: 'form-control' %>
        <small id="poster-tip" class="form-text text-muted">
            お客様名を記入
        </small>
    </div>
    <div class="form-group">
        <%= f.label :title, 'ネイル状態所感' %>
        <%= f.text_field :title, class: 'form-control' %>
        <small id="title-tip" class="form-text text-muted">
            よしなに記入
        </small>
    </div>
    <div class="form-group">
        <%= f.label :content, '詳細情報' %>
        <%= f.text_area :content, class: 'form-control', rows:10 %>
        <small id=content-tip" class="form-text text-muted">
            詳細情報をよしなに。
        </small>
    </div>
    <%= f.submit '更新', class: 'btn btn-info btn-block' %>
    <small id="submit-tip" class="form-text text-muted">
        更新前にご確認をお願いします。
    </small>
<% end %>
